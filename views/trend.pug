extends layout.pug

block content
    .container
        .row.text-center 
            h1 #{trendName}
        .row
            h1 #{trendName}
        .row
            .col
                .row.mb-5 
                    .card(style='width: 18rem;')
                        .card-body
                            h5.card-title Most Retweeted Tweet
                            p.card-text
                            | Text of most retweeted tweet
                .row
                    .card(style='width: 18rem;')
                        .card-body
                            h5.card-title Most Favorited Tweet
                            p.card-text
                            | Text of most favorited Tweet
            .col
                .row.mb-5
                    canvas#myChart(style='width:100%;max-width:600px')
                .row
                    h1 pie chart
                
        
                
                script.
                    var xValues = ["Positive", "Negative", "Neutral"];
                    var yValues = [55, 49, 44];
                    var barColors = [
                    "#3DD6F5",
                    "#F93535",
                    "#C0C0C0",
                    ];
                    new Chart("myChart", {
                    type: "pie",
                    data: {
                    labels: xValues,
                    datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                    }]
                    },
                    options: {
                    title: {
                    display: true,
                    text: "World Wide Wine Production 2018"
                    }
                    }
                    });
